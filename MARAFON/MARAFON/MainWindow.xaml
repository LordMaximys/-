<Window x:Class="MARAFON.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MARAFON"
        mc:Ignorable="d"
        Title="MainWindow" Style="{DynamicResource base_window}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Rectangle Fill="{DynamicResource Dark_grey}" HorizontalAlignment="Center" Height="45" Margin="0,241,0,0" Stroke="Black" VerticalAlignment="Top" Width="500" RenderTransformOrigin="0.5,0.55" Grid.Column="3"/>
        <Frame Grid.Column="3" Content="Frame" Margin="10,10,10,0"/>

    </Grid>
</Window>
